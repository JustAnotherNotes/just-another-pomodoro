CC = gcc
PKG = libnotify
CFLAGS = -g -Wall $(shell pkg-config --cflags $(PKG))
LDFLAGS = $(shell pkg-config --libs $(PKG))

SRC_D = src
OBJ_D = obj
BIN_D = bin

SRCS = $(SRC_D)/main.c $(SRC_D)/jap_notify_linux.c
OBJS = $(patsubst $(SRC_D)/%.c, $(OBJ_D)/%.o, $(SRCS))

BIN = $(BIN_D)/jap

debug: $(BIN)

release: CFLAGS = -O2 -DNDEBUG $(shell pkg-config --cflags $(PKG))
release: clean $(BIN)

$(BIN): $(OBJS) | $(BIN_D)
	$(CC) $(CFLAGS) $(OBJS) -o $@ $(LDFLAGS)

$(OBJ_D)/%.o: $(SRC_D)/%.c $(SRC_D)/jap_notify.h | $(OBJ_D)
	$(CC) $(CFLAGS) -c $< -o $@

$(BIN_D):
	mkdir -p $@

$(OBJ_D):
	mkdir -p $@

clean:
	rm -rf $(BIN_D) $(OBJ_D)

.PHONY: clean release debug
